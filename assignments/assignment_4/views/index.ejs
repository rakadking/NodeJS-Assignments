<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link" href="/form">Add User</a>
        </li>
    </ul>
    <div>
        <table class="table">
            <tbody>

                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">isPromoted</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
                <% users.forEach(user=> { %>
                    <tr>
                        <td>
                            <%=user.name %>
                        </td>
                        <td>
                            <%=user.email %>
                        </td>
                        <% if (user.isPromoted==null) { %>
                            <td class="text-warning">
                                null
                            </td>
                            <% } else if (user.isPromoted==false) { %>
                                <td class="text-danger">
                                    <%=user.isPromoted %>
                                </td>
                                <% } else{ %>
                                    <td class="text-success">
                                        <%=user.isPromoted %>
                                    </td>
                                    <% } %>
                                        <td>
                                            <form method="post" action="/users/<%= user._id %>/update?_method=PUT">
                                                <button id="edit-<%= user.name %>" type="submit">Promote/Demote</button>
                                            </form>
                                        </td>
                                        <td>
                                            <form method="post" action="/users/<%= user._id %>/delete?_method=DELETE">
                                                <button class="btn btn-danger"
                                                    id="delete-<%= user.name %>">Delete</button>
                                            </form>
                                        </td>

                    </tr>
                    <% }) %>

            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>

